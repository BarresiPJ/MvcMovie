@model MvcMovie.Models.Movie
<h2>Eliminar Película</h2>

<div>
    <h4>Estás seguro que deseas eliminar esta película de tu registro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <!-- Agrega aquí más propiedades del modelo que deseas mostrar -->
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminate" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </form>
</div>
